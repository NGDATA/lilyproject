<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <h1>Hello Kauri</h1>
  <ktl:macro name="foobar">
    <ktl:parameter name="par1" />
    <ktl:parameter name="par2" value="default" />
    <ktl:parameter name="par3" value="default" />
    <div class="${par1}">${par2}</div>
    <div class="${par1}">${par3}</div>
  </ktl:macro>
  <p>something in between</p>
  <ktl:callMacro name="foobar">
    <ktl:parameter name="par1" value="foo" />
    <ktl:parameter name="par2" value="bar" />
  </ktl:callMacro>
  <p>somewhere at the end</p>
  <ul>
    <ktl:callMacro name="tuple">
      <ktl:parameter name="x" value="15" />
      <ktl:parameter name="y" value="25" />
    </ktl:callMacro>
    <ktl:callMacro name="tuple">
      <ktl:parameter name="x" value="-100" />
      <ktl:parameter name="y" value="100" />
    </ktl:callMacro>
  </ul>
  <ktl:macro name="tuple">
    <ktl:parameter name="x" />
    <ktl:parameter name="y" value="0" />
    <ktl:parameter name="z" value="0" />
    <li>(${x},${y},${z})</li>
  </ktl:macro>
  <ktl:macro name="tablerows">
    <ktl:parameter name="list" />
    <ktl:parameter name="color" />
    <ktl:forEach in="${list}">
      <tr>
        <td bgcolor="${color}">${item}</td>
      </tr>
    </ktl:forEach>
  </ktl:macro>
  <ktl:variable name="fruit" value="$g{['apple', 'pear', 'banana']}" />
  <ktl:variable name="vegetables" value="$g{['salad', 'carrot', 'leek']}" />
  <table>
    <ktl:callMacro name="tablerows">
      <ktl:parameter name="list" value="${fruit}" />
      <ktl:parameter name="color" value="green" />
    </ktl:callMacro>
    <ktl:callMacro name="tablerows">
      <ktl:parameter name="list" value="${vegetables}" />
      <ktl:parameter name="color" value="red" />
    </ktl:callMacro>
  </table>
</root>