<?xml version="1.0" encoding="UTF-8"?>
<html xmlns:ktl="http://kauriproject.org/template">
  <head>
    <title>Template inheritance</title>
  </head>
  <body>
    <ktl:block name="lead">
      <p>leading stuff from base</p>
    </ktl:block>
    <ktl:block name="block1">
      <p>first block - base</p>
    </ktl:block>
    <ktl:block name="block2">
      <p>second block - base</p>
    </ktl:block>
    <ktl:block name="block3">
      <p>third block - base</p>
    </ktl:block>
    <ktl:block name="trail">
      <p>trailing stuff from base</p>
    </ktl:block>
  </body>
</html>