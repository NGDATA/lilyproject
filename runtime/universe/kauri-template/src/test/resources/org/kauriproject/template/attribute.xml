<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <h1 class="title">Testing the attribute directive</h1>
  <div>
    <ktl:attribute name="class" value="music" />
    <p>There is no song, just a delusion of silence.</p>
    <p>We dance and the music dies.</p>
  </div>
  <div>
    <ktl:attribute name="class" value="math" />
    <p>1 + 1 == 2</p>
  </div>
  <div span="2">
    <ktl:attribute name="class" value="spanned" />
    <ktl:attribute name="id" value="007" />
  </div>
  <div xmlns:p1="ns1">
    <ktl:attribute name="p1:att1" value="val1"/>
  </div>
</root>
