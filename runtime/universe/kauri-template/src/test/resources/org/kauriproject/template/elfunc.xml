<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <div class="math">
    <p>${math:sin(math:pi()/2) == 1.0}</p>
    <p>${math:cos(math:pi()/2) &gt;= 0 and math:cos(math:pi()/2) &lt;= 0.001}</p>
    <p>${math:min(3.1415926,math:pi()) &lt;= math:pi()}</p>
    <p>floor(5/2) = ${math:floor(5/2).intValue()}</p>
    <p>ceil(5.0/2.0) = ${math:ceil(5.0/2.0)}</p>
    <p>${math:random() != math:random()}</p>
  </div>
  <div class="txt">
    <p>${txt:toUpperCase('kauri')} ${txt:toUpperCase('rules')}</p>
    <p>${txt:toLowerCase(txt:toUpperCase('dEUs'))}</p>
    <p>${txt:trim(' trimmed string ')}</p>
    <p>${txt:length(txt:substring(txt:string(math:pi()),2,5))}</p>
    <p>${txt:left('kauri-templating',5)}+${txt:right('kauri-templating',10)}</p>
    <p>${txt:contains('tingelingeling','ling')} - ${txt:contains('tingelingeling','bla')}</p>
    <p>${txt:startsWith('tingelingeling','tin')} - ${txt:startsWith('tingelingeling','bla')}</p>
    <p>${txt:endsWith('tingelingeling','ing')} - ${txt:endsWith('tingelingeling','bla')}</p>
  </div>
  <div class="date">
    <p>${date:now("dd/MM/yyyy HH'u'mm") != ""}</p>
    <p>${date:format(date:date(1980,2,8),"dd/MM/yyyy")}</p>
    <p>${date:format(date:time(16,25,18),"HH:mm:ss")}</p>
    <p>${date:format(date:datetime(1980,2,8,16,25,18),"dd/MM/yyyy HH'u'mm")}</p>
  </div>
</root>
