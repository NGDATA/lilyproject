<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <ktl:forEach begin="1" end="3" step="1">
    <h1>HelloWorld</h1>
    <ktl:forEach begin="1" end="3" step="1">
      <p>inner loop run \#$g{loopStatus.number}</p>
    </ktl:forEach>
  </ktl:forEach>
  <ktl:if test="#{1+1==2}">
    <h1>Hello Kauri</h1>
  </ktl:if>
  <ktl:choose>
    <ktl:when test="false">
      <p>first</p>
    </ktl:when>
    <ktl:when test="!true">
      <div>
        <p>second option, we repeat helloworld</p>
        <ktl:forEach begin="1" end="3" step="1">
          <h1>HelloWorld</h1>
        </ktl:forEach>
      </div>
    </ktl:when>
    <ktl:otherwise>
      <p>other</p>
      <ktl:if test="${math:sin(math:pi()/2) == 1.0}">
        <p>the sine of pi/2 equals 1</p>
      </ktl:if>
      <ktl:if
        test="${math:cos(math:pi()/2) &gt;= 0 and math:cos(math:pi()/2) &lt;= 0.001}">
        <p>the cosine of pi/2 equals 0</p>
      </ktl:if>
      <ktl:if test="${math:min(3.1415926,math:pi()) &lt;= math:pi()}">
        <p>the above is always true</p>
      </ktl:if>
    </ktl:otherwise>
  </ktl:choose>
  <p>${txt:toUpperCase('kauri')} ${txt:toUpperCase('rules')}</p>
  <p>${2+2 &lt;= 4 ? 'waar' : 'niet waar'}</p>
  <xyz:div xmlns:xyz="http://kauriproject.org/template/extra">
    What will happen here ?
  </xyz:div>
  <klm:div xmlns:klm="http://kauriproject.org/template/extra2">
    ... and here ?
  </klm:div>
  <div>
    <ktl:attribute name="class" value="bla" />
    <div class="boe">
      text
      <p>moeha</p>
      text
    </div>
  </div>
  <p class="${txt:toUpperCase('groovy')}">$g{"groovy "*3}</p>
  <p>This is the end !</p>
</root>