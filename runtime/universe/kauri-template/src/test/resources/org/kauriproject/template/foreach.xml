<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <ktl:forEach begin="1" end="3">
    <h1>HelloWorld</h1>
    <ktl:forEach begin="3" end="3" step="1">
      <p>inner loop 1</p>
    </ktl:forEach>
    <ktl:forEach begin="${1+1}" end="${4+1}" step="${2 * 1}" var="${'X'}">
      <p>inner loop 2</p>
    </ktl:forEach>
  </ktl:forEach>
  <div>
    <ktl:forEach var="item" in="${mylist}">
      <p>in collection: ${item}</p>
    </ktl:forEach>
  </div>
  <div>
    <ktl:forEach in="${mylist}" step="2">
      <tr>
        <td>${loopStatus.number}</td>
        <td>${item}</td>
      </tr>
    </ktl:forEach>
  </div>
  <div>
    <ktl:forEach var="element" in="${myarray}">
      <p class="${element}">in array: ${element}</p>
    </ktl:forEach>
  </div>
  <div>
    <ktl:forEach in="${mylist}" step="1" begin="1" end="1">
      <p>${item}</p>
    </ktl:forEach>
  </div>
</root>