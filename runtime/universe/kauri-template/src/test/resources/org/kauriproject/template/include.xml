<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:t="http://kauriproject.org/template">
  <t:variable name="foo" value="foo" />
  <t:variable name="bar" value="bar" />
  <t:variable name="old" value="bilbo" />
  <t:variable name="x" value="mee" />
  <t:macro name="macro">
    <p>macro from base template</p>
  </t:macro>
  <t:callMacro name="macro" />
  <p>ready to include</p>
  <t:include src="included.xml" />
  <p>after inclusion</p>
  <p>we have ${foo} and ${bar} here</p>
  <p>we still know ${old},</p>
  <p>but now we also know ${new}</p>
  <t:callMacro name="macro" />
  <t:include src="included2.xml" mode="silent" />
  <p>after silent inclusion</p>
  <p>we have ${x} here</p>
  <t:callMacro name="m" />
  <t:include src="init_special.xml" />
</root>