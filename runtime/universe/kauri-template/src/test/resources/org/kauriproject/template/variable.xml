<?xml version="1.0" encoding="UTF-8"?>
<root xmlns:ktl="http://kauriproject.org/template">
  <ktl:variable name="foo" value="10" />
  <ktl:variable name="bar">party like it's ${(foo * 200) - 1}</ktl:variable>
  <ktl:variable name="time" value="${mydate}"/>
  <div class="foo">
    <p>foo = ${foo}</p>
  </div>
  <div class="bar">
    <p>bar = ${bar}</p>
  </div>
  <div class="time">
    <p>time = ${date:format(time,"HH:mm:ss")}</p>
  </div>
</root>