<?xml version="1.0"?>
<beans              xmlns = "http://www.springframework.org/schema/beans"
                xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
              xmlns:kauri = "http://kauriproject.org/runtime/1.0#springext"
            xmlns:context = "http://www.springframework.org/schema/context"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-2.5.xsd
                             http://kauriproject.org/runtime/1.0#springext
                             http://www.kauriproject.org/schemas/runtime/springext.xsd">

  <context:annotation-config/>

  <kauri:module classLoader="moduleClassLoader" conf="conf"/>

  <bean class="org.kauriproject.runtime.rapi.ConfPlaceholderConfigurer">
    <constructor-arg ref="conf"/>
  </bean>

  <bean id="confTestBean1" class="java.lang.String">
    <constructor-arg index="0" type="java.lang.String" value="${test2:email}"/>
  </bean>

  <bean id="confTestBean2" class="org.kauriproject.runtime.test.testmodules.confmod.ConfDependentBean">
    <constructor-arg>
      <kauri:conf path="test2"/>
    </constructor-arg>
  </bean>

  <bean id="confTestBean3" class="java.lang.String">
    <!-- The following is equivalent to the ${path:expr} syntax -->
    <constructor-arg index="0" type="java.lang.String"><kauri:conf path="test2" select="email"/></constructor-arg>
  </bean>
</beans>
