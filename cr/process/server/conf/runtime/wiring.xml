<wiring>
  <modules>
    <artifact id="pluginregistry" groupId="org.lilyproject" artifactId="lily-pluginregistry-impl"
              version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="servletregistry" groupId="org.lilyproject" artifactId="lily-servletregistry-module"
              version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="general" groupId="org.lilyproject" artifactId="lily-general-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="indexer-integration" groupId="org.lilyproject" artifactId="lily-indexer-integration-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <!-- lily.plugin.dir:
          - this property, or rather basePath, can contain a list of paths,
            separated by the system path separator (colon on unix)
          - each directory listed in basePath is combined with path to form
            a full path to a directory
          - in each of these paths, *.xml files are read (in filename-sorted
            order) and included (these should be wiring files)
    -->
    <directory id="plugin" basePath="${lily.plugin.dir}" path="load-before-repository"/>

    <artifact id="repository" groupId="org.lilyproject" artifactId="lily-repository-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="avro" groupId="org.lilyproject" artifactId="lily-rpc-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="rest" groupId="org.lilyproject" artifactId="lily-rest-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="webui" groupId="org.lilyproject" artifactId="lily-webui-module" version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <directory id="plugin" basePath="${lily.plugin.dir}" path="load-at-end"/>

    <artifact id="repository-master" groupId="org.lilyproject" artifactId="lily-repository-master-module"
              version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

    <artifact id="jetty" groupId="org.lilyproject" artifactId="lily-jetty-module"
              version="2.6-hbaseindexer-SNAPSHOT">
    </artifact>

  </modules>
</wiring>
