<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:kauri="http://kauriproject.org/runtime/1.0#springext"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                             http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                             http://www.springframework.org/schema/context
                             http://www.springframework.org/schema/context/spring-context-2.5.xsd
                             http://kauriproject.org/runtime/1.0#springext
                             http://www.kauriproject.org/schemas/runtime/springext.xsd">

  <context:annotation-config/>

  <kauri:module classLoader="moduleClassLoader" handle="module" conf="confRegistry"/>

  <!-- TODO: configuration? -->
  <bean class="org.kauriproject.runtime.rapi.ConfPlaceholderConfigurer">
    <constructor-arg ref="confRegistry"/>
  </bean>

  <bean id="servletRegistry" class="org.lilyproject.servletregistry.impl.ServletRegistryImpl"/>

  <kauri:export-service ref="servletRegistry" service="org.lilyproject.servletregistry.api.ServletRegistry"/>

</beans>
