{
  failuresFile: "failures.log",

  namespaces: {
    "org.lilyproject.tools.tester": "tester"
  },
  
  fieldTypes: [
    {
      name: "tester$field1",
      valueType: "STRING",
      scope: "non_versioned",
      properties: {wordCount: 3}
    }
  ],

  recordTypes: [
    {
      name: "tester$RT1",
      fields: [
        {
          name: "tester$field1"
        }
      ]
    }
  ],

  scenario: [
    {
      name: "create",
      action: "create",
      recordType: "tester$RT1",
      count: 1
    }
  ],

  stopConditions: {
    /* The time is in minutes */
    maximumRunTime: 45,
    maximumFailures: 1000
  }
}
