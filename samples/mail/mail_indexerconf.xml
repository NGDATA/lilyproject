<?xml version="1.0"?>
<indexer xmlns:m="org.lilyproject.mail">
  <recordFilter>
    <includes>
      <include recordType="m:Part" vtags="last"/>
      <include recordType="m:Message" vtags=""/>
    </includes>
  </recordFilter>

  <fields>
    <field name="content" value="m:content" extractContent="true"/>

    <field name="subject" value="m:message=>m:subject"/>
  </fields>

</indexer>
